<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:background="@color/greyish"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="?actionBarSize"
        android:theme="?actionBarTheme">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/quieto"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appname"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_gravity="center">
        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mas"
            android:backgroundTint="@color/black"
            android:textSize="30sp"
            android:layout_gravity="end"
            android:onClick="newSong">
        </Button>
    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:id="@+id/songList"
        android:layout_width="match_parent"
        android:layout_height="190sp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#FFFFFF">

    </ListView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:onClick="borrarSongs"
        android:text="Borrar Todo"
        android:textSize="20sp">
    </Button>

    <ImageView
        android:id="@+id/iV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/stand_scaled_14x_minified"
        android:layout_gravity="center"/>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/songName"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="ðŸ˜ŽSample textðŸ˜Ž"
            android:textSize="20dp"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentDur"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="left"
                android:text="15:20"
                android:textSize="15dp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/totalDur"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="15:20"
                android:textSize="15dp"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2"
            android:gravity="center">

        </SeekBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="86dp"
                android:layout_height="90dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_weight="0"
                android:layout_gravity="end"
                android:backgroundTint="#006699FF"
                android:onClick="stopSong"
                app:srcCompat="@drawable/trashnotpressed" />


            <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="86dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:backgroundTint="#006699FF"
                android:gravity="center"
                android:onClick="playMedia"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/newplay" />

            <ImageButton
                android:id="@+id/btnStop"
                android:layout_width="86dp"
                android:layout_height="90dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_weight="0"
                android:layout_gravity="end"
                android:backgroundTint="#006699FF"
                android:onClick="stopSong"
                app:srcCompat="@drawable/stopnotpressed" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
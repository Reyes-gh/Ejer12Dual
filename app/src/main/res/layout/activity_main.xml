<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/greyish"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="?actionBarSize"
        android:theme="?actionBarTheme">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/quieto"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alextify"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_gravity="center">
        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:backgroundTint="@color/black"
            android:textSize="30sp"
            android:layout_gravity="end"
            android:onClick="newSong">
        </Button>
    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:id="@+id/songList"
        android:layout_width="match_parent"
        android:layout_height="190sp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#FFFFFF"></ListView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:onClick="borrarSongs"
        android:text="Borrar Todo"
        android:textSize="20sp">
    </Button>

    <ImageView
        android:id="@+id/iV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/stand_scaled_14x_minified"
        android:layout_gravity="center"/>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="ðŸ˜ŽSample textðŸ˜Ž"
            android:textSize="20dp"
            android:textColor="#FFFFFF"/>

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/blueish"
            android:onClick="playMedia"
            app:srcCompat="@android:drawable/ic_media_play"/>

    </LinearLayout>

</LinearLayout>